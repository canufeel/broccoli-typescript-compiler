{
  "name": "broccoli-typescript-compiler",
  "version": "1.0.1",
  "description": "A Broccoli plugin which compiles TypeScript files.",
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "test": "mocha tests",
    "test:debug": "mocha --no-timeouts debug tests",
    "prepublish": "npm run build",
    "build": "tsc && rollup -c && sorcery -i dist/plugin.js"
  },
  "files": [
    "dist/*",
    "lib/*.d.ts",
    "index.js",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tildeio/broccoli-typescript-compiler.git"
  },
  "keywords": [
    "broccoli-plugin",
    "compiler",
    "TypeScript",
    "javascript",
    "js"
  ],
  "author": "Godfrey Chan <godfrey@tilde.io> (http://tilde.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tildeio/broccoli-typescript-compiler/issues"
  },
  "homepage": "https://github.com/tildeio/broccoli-typescript-compiler",
  "dependencies": {
    "broccoli-funnel": "^1.0.6",
    "broccoli-merge-trees": "^1.1.4",
    "broccoli-plugin": "^1.2.1",
    "findup": "^0.1.5",
    "fs-tree-diff": "git+https://github.com/canufeel/fs-tree-diff.git#master",
    "get-caller-file": "^1.0.1",
    "heimdalljs": "^0.3.0-alpha3",
    "json-stable-stringify": "^1.0.1",
    "md5-hex": "^1.3.0",
    "walk-sync": "^0.3.1"
  },
  "peerDependencies": {
    "typescript": ">=1.8.0"
  },
  "devDependencies": {
    "@types/node": "6.0.52",
    "broccoli": "^0.16.3",
    "chai": "^3.5.0",
    "ensure-posix-path": "^1.0.1",
    "fixturify": "^0.3.0",
    "fs-extra": "^0.30.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.1.0",
    "rimraf": "^2.4.2",
    "rollup": "^0.36.1",
    "rollup-plugin-buble": "^0.14.0",
    "sorcery": "^0.10.0",
    "tslint": "4.0.2",
    "typescript": "2.1.4"
  }
}
